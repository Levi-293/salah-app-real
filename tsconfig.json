{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./utils/types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "context/GlobalProvider.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "utils/types/*.d.ts"
  ]
}
